<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Página de Error</title>
    <link rel="stylesheet" href="error.css">
    <script>
        window.onload = function() {
            var urlParams = new URLSearchParams(window.location.search);
            var errorCode = urlParams.get('error');
            var errorMessage = 'Ha ocurrido un error';
            switch(errorCode) {
                case '404':
                    errorMessage = '404: La página que estás buscando no se encuentra disponible.';
                    break;
                case '500':
                    errorMessage = '500: Error interno del servidor.';
                    break;
                // Añade aquí más códigos de error según sea necesario
            }
            document.getElementById('error-message').innerText = errorMessage;
        }
    </script>
</head>
<body>
    <div class="error-container">
        <h1 id="error-code">Error</h1>
        <p id="error-message"></p>
        <a href="/">Volver a la página principal</a>
    </div>
</body>
</html>